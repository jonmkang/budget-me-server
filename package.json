    "knex": "^0.21.5",
    "morgan": "^1.10.0",
    "pg": "^8.3.3",
    "xss": "^1.0.8"
  },
  "devDependencies": {
    "bcrypt": "^5.0.0",
    "jsonwebtoken": "^8.5.1",
